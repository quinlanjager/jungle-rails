<tr>
  <td>
  <%= image_tag line_item.product.image.tiny, alt: line_item.product.name %>
  </td>
  <td>
    <h4><%= line_item.product.name %></h4><br/>
    <%= line_item.product.description %>
  </td>
  <td><%= line_item.quantity %></td>
  <td><%= humanized_money_with_symbol line_item.product.price * line_item.quantity %></td>
</tr>
