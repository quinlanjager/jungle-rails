<h2>Create A New Account</h2>
<hr />
<%= form_for :user, url: [:user], method: "POST" do |form| %>
  <% if @user.errors.full_messages.length > 0 %>
  <div class="alert alert-danger">
    <% @user.errors.full_messages.each do |message| %>
      <label><%= message %></label>
    <% end %>
  </div>
  <% end %>
  <div class="form-group">
    <label>First Name</label>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Last Name</label>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>E-mail</label>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Password</label>
    <%= form.password_field :password, class: "form-control" %>
  </div>
  <%= form.submit "Create your account", class:"btn" %>
  <p class="form-footnote"><strong>Already have an account? <%= link_to "Login!", :login %></strong></p>
<% end %>
