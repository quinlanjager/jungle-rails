<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>

  <h2>Reviews</h2>

  <%= form_for :review, url: [@product, @review], method: "POST", class: "form-horizontal review-form" do |form| %>
    <% if alert %>
      <div class="alert alert-warning">
        <label><%= alert %></label>
      </div>
    <% end %>

    <div class="form-group">
      <label>Rating (out of 5)</label>
      <%= form.number_field :rating, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>description</label>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <%= form.submit class: "btn" %>
  <% end %>

  <% @reviews.each do |review| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Rating: <% review.rating.to_i.times do %><span class="glyphicon glyphicon-star"></span><% end %></h4>
      </div>
      <div class="panel-body">
        <p><strong><%= review.user ? review.user.first_name : "Anonymous" %></strong> says:</p>
        <p><%= review.description %>
      </div>
    </div>
  <% end %>

</section>
